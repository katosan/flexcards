{% include 'partials/_header.twig' %}

  <body>
	  
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
	  <!-- Branding -->
	  <a class="navbar-brand" href="#">
        <img src="{{ asset('brand/flexcard.svg', 'theme') }}" width="30" height="30" class="d-inline-block align-top" alt=""> Flexcard 
      </a>
      <!-- Responsive toggle -->
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Include _menu.twig -->
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        {{ menu('main', 'partials/_menu.twig') }}
      </div>
    </nav>
	  
	<div class="container-fluid">

		<div class="card-columns p-2">
			{% setcontent boxes = 'entries/latest/10' %}
			{% for box in boxes %}
			<div class="card">
				<div class="card-block">
					<h4 class="card-title">{{ box.title }}</h4>
					<img class="card-img" src="{{ thumbnail(box.image) }}">
					<p class="card-text">{{ box.teaser }}</p>
					{{ link(box.link, "Read more") }}
				</div>
			</div>
			{% endfor %}
		</div>
		
	</div>

{% include 'partials/_footer.twig' %}
