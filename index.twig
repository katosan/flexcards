{% include 'partials/_header.twig' %}

  <body>
	  
{% include 'partials/_navbar.twig' %}

    {% set cols = [1,2,3,4] %}
    {% set rows = [1,2,3] %}
    
    {% set vertical = [] %}
    {% set horizontal = [] %}
    {% set horizontal3x = [] %}
    {% set horizontal2x = [] %}
    
    {# The latest entries, you can change the query to whatever you want  #}
    {% setcontent boxes = 'entries/latest/12' %}
    
    {# Get the query ordering #}
	{% for box in boxes %}
	  {% set vertical = vertical|merge([box.id]) %}
	{% endfor %}
    
    {# 4 columns #}
    {% set flipper = [] %}
    {% for i in cols %}
      {% for j in rows %}
        {% set flipper = flipper|merge([ (i-(cols|length)+j*(cols|length))-1 ]) %}
      {% endfor %}
    {% endfor %}
    
    {# 3 columns #}
    {% set flipper3x = [] %}
    {% for i in cols|slice[0:3] %}
      {% for j in 0..3 %}
        {% set flipper3x = flipper3x|merge([ i-4+(j*3)+3 ]) %}
      {% endfor %}
    {% endfor %}
    
    {# 2 columns #}
    {% set flipper2x = [] %}
    {% for i in cols|slice[0:2] %}
      {% for j in 0..(boxes|length//2) %}
        {% set flipper2x = flipper2x|merge([ i+2*j-1 ]) %}
      {% endfor %}
    {% endfor %}
    
    {% for key in flipper|keys %}
      {% if vertical[flipper[key]] is not empty %}
      {% set horizontal = horizontal|merge({0: vertical[flipper[key]]|trim}) %}
      {% endif %}
      {% if vertical[flipper3x[key]] is not empty %}
      {% set horizontal3x = horizontal3x|merge({0: vertical[flipper3x[key]]|trim}) %}
      {% endif %}
      {% if vertical[flipper2x[key]] is not empty %}
      {% set horizontal2x = horizontal2x|merge({0: vertical[flipper2x[key]]|trim}) %}
      {% endif %}
    {% endfor %}
	
	{#{{ dump(horizontal) }}
	{{ dump(horizontal3x) }}
	{{ dump(horizontal2x) }}#}
	
	<div class="container-fluid">
    
        <div class="row">
			{% set rowstart = 0 %}
			{% set sortorder = 0 %}
			{% for col in cols|keys %}
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
				{% for key in horizontal|keys|slice(rowstart, rows|length) %}
			    {% setcontent record = 'entry/%this%'|replace({'%this%': horizontal[key]}) %}
			    <div id="{{horizontal[key]}}">
			    <div class="card" data-sort="{{horizontal[key]}}">
				    <div class="card-block">
						<div>Id: {{horizontal[key]}}</div>
					    <h4 class="card-title">{{ record.title }}</h4>
					    <img class="card-img" src="{{ thumbnail(record.image) }}">
					    <p class="card-text">{{ record.teaser }}</p>
					    {{ link(record.link, "Read more") }}
				    </div>
			    </div>
			    <p></p>
			    </div>
			    {% endfor %}
			    {% set rowstart = rowstart+rows|length %}
            </div>
            {% endfor %}
            
        </div>
    </div>

{% include 'partials/_footer.twig' %}
