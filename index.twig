{% include 'partials/_header.twig' %}

  <body>
	  
{% include 'partials/_navbar.twig' %}
    
    {% set vertical = [] %}
    {% set horizontal = [] %}
    
    {% setcontent boxes = 'entries/latest/12' %}
	{% for box in boxes %}
	  {% set vertical = vertical|merge([box.id]) %}
	{% endfor %}
    
    {% set cols = 4 %}
    {% set rows = 3 %}
    
    {% set vals = vertical %}
    {% set horz = [] %}
    
    {% for i in 1..cols %}
      {% for j in 1..rows %}
        {% set horz = horz|merge([ (i-(cols|length)+j*(cols|length))-1 ]) %}
      {% endfor %}
    {% endfor %}
    
    {% for i in vertical|keys %}
      {% set horizontal = horizontal|merge([vertical[horz[i]]]) %}
    {% endfor %}
    
    {% set refa = boxes|length // 3 %}


</div>	
	
	<div class="container-fluid">
    <div class="row">
    <div class="col-3" >
    {% for i in horizontal|slice(0, refa) %}
			{% setcontent boxy = 'entry/%this%'|replace({'%this%': i}) %}
			<div class="card">
				<div class="card-block">
					<h4 class="card-title">{{ boxy.title }}</h4>
					<img class="card-img" src="{{ thumbnail(boxy.image) }}">
					<p class="card-text">{{ boxy.teaser }}</p>
					{{ link(boxy.link, "Read more") }}
				</div>
			</div>
			<p></p>
	{% endfor %}
    </div>
    <div class="col-3">
    {% for i in horizontal|slice(refa+1, refa) %}
			{% setcontent boxy = 'entry/%this%'|replace({'%this%': i}) %}
