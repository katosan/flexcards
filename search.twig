{% include 'partials/_header.twig' %}

    <body>
    
    {% set ids = [] %}
	  
{% include 'partials/_navbar.twig' %}
	  
	<div class="container-fluid">
	
        <h2>
            {% if search is not empty %}
                {{ __('general.phrase.search-results-for-variable', { '%search%': search }) }}
            {% else %}
                {{ __('general.phrase.search') }}
            {% endif %}
        </h2>

		<div class="card-columns p-2">
			{% for record in records %}
			<div class="card">
				<div class="card-block">
					<h4 class="card-title"><a href="{{ record.link }}">{{ record.title }}</a></h4>
					{% if record.image!="" %}
					<a href="{{ image(record.image) }}">
					   <img class="card-img" src="{{ thumbnail(record.image) }}">
					</a>
					{% endif %}
					<p class="card-text">{{ record.excerpt(300, false, search|default('')) }}</p>
				</div>
			</div>
		    {% else %}
		    <div class="card">
				<div class="card-block">
                    <p class="card-text">{{ __('general.phrase.no-result-for-search-term', { '%SEARCHTERM%': search|escape }) }}</p>
				</div>
			</div>
            {% endfor %}
		</div>
		
        
{% include 'partials/_footer.twig' %}
